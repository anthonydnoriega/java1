    public static void main (String[] Args){
        String[] words1 = {"Poetry ","for ","love "};
        String[] words2 = {"Love ", "Poetry "};
        String[] words3 = {"Haiku ", "of ","love "};
        String w = Main(words1);
        System.out.println(w);
        String w2 = Main(words2);
        System.out.println(w2);
        String w3 = Main(words3);
        System.out.println(w3);
        return;
    }
}
