/* Author: Anthony Noriega
     Purpose: solve a sample Google interview problem
     Description: this program concatenates string on a desirable way to build a sentence
     
*/


public class Main {
    
    public static String Main(String[] words) {
     StringBuffer sentence
    = new StringBuffer();
   
    
    for (String w : words) {
        sentence.append(w);
    }
    return sentence.toString();
    
    }
    public static String concat2(String[] words, String[] words2) {
    StringBuffer sentence
    = new StringBuffer();
    
    for (String w : words) {
        sentence.append(w);
    }
        for (String w : words2) {
        sentence.append(w);
    }
    return sentence.toString();
    
    }
    
    /*
